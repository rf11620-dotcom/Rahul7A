/* Change the background of the entire visible page */
body {
    background-color: #15, 53, 135; /* Very light grey */
}

/* Style for all paragraphs */
p {
    color: darkgreen;
    font-size: 16px;
    font-family: 'cursive', serif;
}

/* Style for the main heading */
h1 {
    text-align: center; /* Puts the heading in the middle */
    border: 2px solid black; /* Adds an black border around the heading */
